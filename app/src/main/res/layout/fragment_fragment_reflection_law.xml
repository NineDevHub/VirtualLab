<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.FragmentReflectionLaw">


    <com.nyongconnect.android.virtuallab.fragment.ReflectionLawView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/reflection_law"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:id="@+id/tvv"/>
    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvv"
        android:layout_marginTop="90dp"
        android:layout_marginRight="18dp"

        android:id="@+id/spinner_list"
        android:entries="@array/spinnerItems"
        android:layout_alignParentEnd="true"
        >

    </Spinner>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Simulate"
        android:onClick="startSimulation"
        android:layout_below="@id/spinner_list"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="18dp"
        />


</RelativeLayout>